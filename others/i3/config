# Make all window floating by default except terminal, firefox, chrome
# for_window [class="[.]*"] floating enable
for_window [class="(?i)URxvt"] floating disable
for_window [class="(?i)Gnome-terminal"] floating disable
for_window [class="(?i)xfce4-terminal"] floating disable
for_window [class="(?i)mate-terminal"] floating disable
for_window [class="(?i)Gnome-builder"] floating disable
